<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Update.EditOthersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proza_libre_bold"
            android:gravity="center"
            android:text="Registration"
            android:textColor="#000"
            android:textSize="22sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/edit_select_role_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            app:contentPadding="@dimen/dp16">

            <TextView
                android:id="@+id/edit_select_role_cv_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text="Select Role"
                android:textColor="@color/black"
                android:textSize="@dimen/sp18" />



        </androidx.cardview.widget.CardView>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edit_other_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="#1B0C0C0C"
            android:src="@drawable/ic_baseline_circle_24" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/edit_image_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_edit_24" />

        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/opensans_bold"
            android:text="Enter name"
            android:textColor="#000"
            android:textSize="13sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            app:passwordToggleEnabled="false"
            app:passwordToggleTint="@color/dark_greenish_grey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ao_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:hint="Name"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/opensans_bold"
            android:text="Enter Phone Number"
            android:textColor="#000"
            android:textSize="13sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ao_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:hint="Phone Number"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/opensans_bold"
            android:text="Enter Password"
            android:textColor="#000"
            android:textSize="13sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/dark_greenish_grey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ao_edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:hint="Passsword"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/opensans_bold"
            android:text="Enter Aadhar Card Number"
            android:textColor="#000"
            android:textSize="13sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            app:passwordToggleTint="@color/dark_greenish_grey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ao_edit_aadhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:hint="Enter Aadhar Number"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/opensans_bold"
            android:text="Enter PAN Card number"
            android:textColor="#000"
            android:textSize="13sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            app:passwordToggleTint="@color/dark_greenish_grey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ao_edit_pan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:hint="Pan Number"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/opensans_bold"
            android:text="Enter Home Address"
            android:textColor="#000"
            android:textSize="13sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            app:passwordToggleTint="@color/dark_greenish_grey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ao_edit_home_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:hint="Address"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/ao_edit_upload_data_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/yellow"
            android:text="UPLOAD DATA"
            android:textColor="@color/black" />

    </LinearLayout>

</ScrollView>