<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="@dimen/dp16"
    android:layout_margin="@dimen/dp8"
    >

    <TextView
        android:id="@+id/eod_rv_client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client Name"
        android:textSize="16sp"
        android:fontFamily="@font/opensans_bold"
        android:layout_gravity="center|start"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end|center"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/eod_rv_edit_btn"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/greenish_grey"
            android:layout_height="wrap_content"
            android:tint="@color/white"
            android:src="@drawable/ic_baseline_edit_24_white"
            app:maxImageSize="@dimen/sp24"
            app:tint="@color/white"
            app:fabCustomSize="@dimen/dp40"

            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/eod_rc_delete_btn"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/greenish_grey"
            android:layout_height="wrap_content"
            android:tint="@color/white"
            android:layout_marginStart="@dimen/dp16"
            android:src="@drawable/ic_baseline_delete_24"
            app:maxImageSize="@dimen/sp24"
            app:tint="@color/white"
            app:fabCustomSize="@dimen/dp40"

            />


    </LinearLayout>

</androidx.cardview.widget.CardView>