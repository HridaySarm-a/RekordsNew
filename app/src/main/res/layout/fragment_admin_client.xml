<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Admin.ChildFragments.AdminClientFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_clients_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/addClientBtn"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addClientBtn"
        app:cornerRadius="@dimen/dp16"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/yellow"
        android:text="ADD NEW CLIENT" />

</RelativeLayout>