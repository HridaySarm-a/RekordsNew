<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp16"
    tools:context=".LeafCollectors.LeafEntryActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/leaf_select_date_cv_btn"
        android:layout_width="match_parent"
        app:contentPadding="@dimen/dp16"
        app:cardCornerRadius="@dimen/dp8"
        app:cardElevation="@dimen/dp4"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ale_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Select Date"
                android:textSize="@dimen/sp16"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/black"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/calendar"
                    />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/leaf_select_grower_cv_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp32"
        android:text="Select Grower"
        android:drawableEnd="@drawable/ic_baseline_arrow_downward_24"
        android:background="@color/yellow_low"
        android:padding="@dimen/dp8"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16"
        android:fontFamily="@font/opensans_bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Quantity in KG"
        android:textSize="@dimen/sp16"
        android:layout_marginTop="@dimen/dp32"
        android:fontFamily="@font/opensans_regular"
        android:textColor="@color/black"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp4"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/leaf_enter_qty_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Qty"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"
            android:inputType="number"
            android:fontFamily="@font/opensans_regular"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/leaf_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="@dimen/dimen_64"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:fontFamily="@font/opensans_regular"
        android:textSize="@dimen/sp16"
        />

</LinearLayout>