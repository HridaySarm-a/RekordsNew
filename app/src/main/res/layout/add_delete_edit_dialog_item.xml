<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/adedi_add_cv_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp8"
        android:backgroundTint="@color/greenish_grey"
        android:elevation="@dimen/dp8"
        app:cardElevation="@dimen/dp8"
        app:contentPadding="@dimen/dp16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:fontFamily="@font/opensans_bold"
            android:text="ADD"
            app:tint="@color/white"
            android:drawablePadding="@dimen/dp16"
            android:drawableStart="@drawable/ic_baseline_add_24"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/adedi_edit_cv_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp8"
        android:backgroundTint="@color/dark_greenish_grey"
        android:elevation="@dimen/dp8"
        app:cardElevation="@dimen/dp8"
        app:contentPadding="@dimen/dp16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:fontFamily="@font/opensans_bold"
            app:tint="@color/white"
            android:drawablePadding="16dp"
            android:text="EDIT/DELETE"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_baseline_delete_24_white"
            android:textSize="@dimen/sp16" />

    </androidx.cardview.widget.CardView>



</LinearLayout>