<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:cardElevation="@dimen/dp8"
    app:cardCornerRadius="@dimen/dp8"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/white"
        android:layout_height="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challan No :"
                android:textSize="14sp"
                android:textColor="#000"
                android:fontFamily="@font/proza_libre_bold"
                />

            <TextView
                android:id="@+id/ci_challanNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11601"
                android:layout_marginStart="4dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:fontFamily="@font/proza_libre_bold"
                />

            <TextView
                android:id="@+id/ci_challanDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="21/05/2021"
                android:layout_marginStart="4dp"
                android:textSize="12sp"
                android:textColor="#031BA5"
                android:fontFamily="@font/proza_libre_bold"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/r_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="Rate"
                android:textColor="#000"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/ci_challanRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/r_tv"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text="20"
                android:textColor="#000"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/m_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minus %"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:textSize="14sp"
                android:textColor="#000"
                android:fontFamily="@font/opensans_bold"
                />

            <TextView
                android:id="@+id/ci_challan_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/m_tv"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/opensans_bold"
                android:text="5%"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ta_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:textColor="#000"
                android:fontFamily="@font/opensans_bold"
                />

            <TextView
                android:id="@+id/ci_challan_totalAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ta_tv"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"

                android:layout_marginTop="8dp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text="Rs 660000"
                android:textColor="#000"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:weightSum="2"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/ci_download_csv_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="@color/greenish_grey"
            app:cardElevation="4dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_download"
                    app:tint="@color/white" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Download CSV"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:fontFamily="@font/opensans_medium"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ci_download_pdf_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="@color/dark_greenish_grey"
            app:cardElevation="4dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_download"
                    app:tint="@color/white"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Download PDF"
                    android:fontFamily="@font/opensans_medium"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


