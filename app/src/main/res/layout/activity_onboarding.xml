<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="2"
    android:layout_height="match_parent"
    tools:context=".OnBoarding.OnboardingActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:lottie_fileName="ob_white.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp16"
            android:text="@string/app_name"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:textColor="@color/dark_greenish_grey"
            android:textSize="@dimen/sp24"
            android:fontFamily="@font/proza_libre_medium"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_description"
            android:gravity="center"
            android:textSize="@dimen/sp16"
            android:fontFamily="@font/opensans_medium"
            android:paddingStart="@dimen/dp32"
            android:paddingEnd="@dimen/dp32"
            android:textColor="@color/greenish_grey"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.mmdev.progressbuttonlib.ProgressButton
                android:id="@+id/get_started_btn"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                app:backgroundColor="@color/yellow"
                app:progressColor="@color/dark_greenish_grey"
                app:text="Let's get started"
                app:textColor="@color/black" />



        </RelativeLayout>

    </LinearLayout>

</LinearLayout>