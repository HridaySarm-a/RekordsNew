<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp16"
    android:orientation="vertical"
    tools:context=".Admin.ChildFragments.AdminLeafFragment">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_marginStart="@dimen/dp16"
       android:layout_marginEnd="@dimen/dp16"
       app:contentPadding="@dimen/dp8"
       app:cardElevation="@dimen/dp8"
       android:layout_height="wrap_content">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Manage Leaf Collectors"
           android:gravity="center"
           android:textSize="@dimen/sp20"
           android:fontFamily="@font/proza_libre_bold"
           android:textColor="@color/black"
           />


   </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp"
        tools:layout_editor_absoluteY="213dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/add_leaf_collector_cv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"

            app:cardBackgroundColor="@color/greenish_grey"
            app:cardCornerRadius="12dp"
            app:contentPadding="@dimen/dp16"
            app:cardElevation="1dp"
            app:cardMaxElevation="10dp" >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bus"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Add/Delete"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12" />


                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center"
                    android:text="Leaf Collector"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:id="@+id/bus"
                    android:layout_width="60dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-1dp"
                    app:srcCompat="@drawable/register" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/viewchallan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:contentPadding="16dp"
            app:cardBackgroundColor="@color/dark_greenish_grey"
            app:cardElevation="1dp"
            app:cardMaxElevation="10dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="View Leaf"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Collection"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14" />


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="60dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    app:tint="@color/white"
                    android:layout_marginTop="-1dp"
                    app:srcCompat="@drawable/view" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>